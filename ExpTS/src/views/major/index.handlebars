  <div class="d-flex justify-content-between">
    <h3>Cursos</h3>
    <div><a href="/major/create" class="btn btn-primary">+</a></div>
  </div>
  
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Sigla</th>
        <th scope="col">Nome</th>
        <th scope="col" style="text-align: right">Opções</th>
      </tr>
    </thead>
    <tbody>
      {{#each majors}}
      <tr>
        <td scope="row" style="vertical-align:middle">{{code}}</td>
        <td scope="row" style="vertical-align:middle">{{name}}</td>
        <td scope="row" style="text-align: right" >
          <a href="/major/read/{{id}}" class="btn btn-primary">Ver</a>
          <a href="/major/update/{{id}}" method="get "class="btn btn-warning">Editar</a>
          <a href="/major/remove/{{id}} " method="get" class="btn btn-danger">Remove</a>
          </td>
      </tr>
      {{/each}}
    </tbody>
</table>
